<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_diccionario"
    tools:context=".Cuerpo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-1183027072386754/7389595038" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Partes del cuerpo"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />
        <ImageButton
            android:id="@+id/imgButton1"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_width="250dp"
            android:background="@drawable/redondeado_completo"
            android:layout_height="250dp"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/abdomen"
            android:contentDescription="Botón de abdomen"/>
        <ImageButton
            android:id="@+id/imgButton2"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:background="@drawable/redondeado_completo"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/boca"
            android:contentDescription="Botón de boca"/>
        <ImageButton
            android:id="@+id/imgButton3"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:background="@drawable/redondeado_completo"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/brazo"
            android:contentDescription="Botón de brazo"/>
        <ImageButton
            android:id="@+id/imgButton4"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_width="250dp"
            android:background="@drawable/redondeado_completo"
            android:layout_height="250dp"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/cuello"
            android:contentDescription="Botón de cuello"/>
        <ImageButton
            android:id="@+id/imgButton5"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_width="250dp"
            android:background="@drawable/redondeado_completo"
            android:layout_height="250dp"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/garganta"
            android:contentDescription="Botón de garganta"/>
        <ImageButton
            android:id="@+id/imgButton6"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_width="250dp"
            android:background="@drawable/redondeado_completo"
            android:layout_height="250dp"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/mano"
            android:contentDescription="Botón de mano"/>
    </LinearLayout>

</ScrollView>